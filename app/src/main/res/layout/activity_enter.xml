<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnterActivity">

    <EditText
        android:id="@+id/player1name"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:hint="Player 1 Name"
        android:inputType="text"
        android:maxLength="50"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/player2name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-300dp"
        android:layout_marginTop="160dp"
        android:hint="Player 2 Name"
        android:inputType="text"
        android:maxLength="50"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/player3name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-300dp"
        android:layout_marginTop="220dp"
        android:hint="Player 3 Name"
        android:inputType="text"
        android:maxLength="50"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/player4name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-300dp"
        android:layout_marginTop="280dp"
        android:hint="Player 4 Name"
        android:inputType="text"
        android:maxLength="50"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/player5name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-300dp"
        android:layout_marginTop="340dp"
        android:hint="Player 5 Name"
        android:inputType="text"
        android:maxLength="2"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/player6name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-300dp"
        android:layout_marginTop="400dp"
        android:hint="Player 6 Name"
        android:inputType="text"
        android:maxLength="50"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/player7name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-300dp"
        android:layout_marginTop="460dp"
        android:hint="Player 7 Name"
        android:inputType="text"
        android:maxLength="50"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/player8name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-300dp"
        android:layout_marginTop="520dp"
        android:hint="Player 8 Name"
        android:inputType="text"
        android:maxLength="50"
        android:textSize="20dp" />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-255dp"
        android:layout_marginTop="600dp"
        android:text="SAVE AND START"
        android:textSize="20dp" />

</LinearLayout>